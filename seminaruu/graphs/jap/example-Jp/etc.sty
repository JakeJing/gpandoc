%%% small title %%%
\def\makesmalltitle{%
\def\@maketitle{\newpage
 \null
 \vskip .5em \begin{center}
 {\Large \@title \par} \vskip .5em {\lineskip .5em
\begin{tabular}[t]{c}\@author 
 \end{tabular}\par} 
 \vskip .5em {\@heldat~~~~\@date~~~~} \end{center}
 \par
 \vskip .5em} 
\maketitle}

%%% tiny title %%%
\def\maketinytitle{%
\def\@maketitle{\newpage\null
{\small \@heldat \hfill \@date}
\vskip .5em
\begin{center}{\large \@title}\end{center}
\hfil{\small \@author}\hfil}
\maketitle}

