   \leavevmode\vtop{\hbox{#1}%
   \hbox{\scriptsize{#2‾}\lower1.4ex\rlap{ } }%
   \hbox{\scriptsize{#3‾}\lower1.4ex\rlap{ } }%
   \vspace*{.5ex}
} }}


